<div align="center">
	<header class="first-view center-vertical" background="mike.jpg">
		<h1>MUSIC SNS!!!</h1>
		<% if current_user.nil? %>
			<form action="/signin" method="post">
				<input name="name" placeholder="ユーザー名">
        <input name="password" type="password" placeholder="パスワード">
        <input type="submit" value="ログイン">
		<% end %>
	</header>
	<section class="center-vertical">
		<h2>最新の投稿</h2>
		<div class="container-fluid">
			<ul class="reverse">
			<% @musics.each do |music| %>
        <div class="card">
					<li><img src="<%= music.img %>" class="card-img-top"></li>
					<div class="card-body">
					<li>artist:<%= music.artist %></li>
					<li>コメント:<%= music.comment %></li>
    			<% @name = User.find(music.user_id).name %>
					<li>投稿者:<%= @name %></li>
					<li>いいねしたユーザー</li>

					<li>
					<% if !current_user.nil? %>
						<% favo = Userfavo.where(favorite: current_user.id).where(music_id: music.id).count %>
						<% if favo == 0 %>
						<a href='/favo/<%= music.id %>/create'>いいねする</a>
						<% else %>
						<a href='/favo/<%= music.id %>/destroy'>いいね解除</a>
						<% end %>
					<% end %>
					</li>
					</div>
				</div>
			<% end %>
			</ul>
		</div>
	</section>
</div>